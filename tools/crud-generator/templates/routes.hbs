import { FastifyInstance, FastifyPluginOptions } from 'fastify';
import { {{ModuleName}}Controller } from './{{moduleName}}.controller';
import {
  Create{{ModuleName}}Schema,
  Update{{ModuleName}}Schema,
  {{ModuleName}}IdParamSchema,
  Get{{ModuleName}}QuerySchema,
  List{{ModuleName}}QuerySchema,
  {{ModuleName}}ResponseSchema,
  {{ModuleName}}ListResponseSchema,
  ErrorResponseSchema
} from './{{moduleName}}.schemas';

export interface {{ModuleName}}RoutesOptions extends FastifyPluginOptions {
  controller: {{ModuleName}}Controller;
}

export async function {{moduleName}}Routes(
  fastify: FastifyInstance,
  options: {{ModuleName}}RoutesOptions
) {
  const { controller } = options;

  // Create {{moduleName}}
  fastify.post('/', {
    schema: {
      tags: ['{{ModuleName}}'],
      summary: 'Create a new {{moduleName}}',
      body: Create{{ModuleName}}Schema,
      response: {
        201: {{ModuleName}}ResponseSchema,
        400: ErrorResponseSchema,
        500: ErrorResponseSchema
      }
    },
    handler: controller.create.bind(controller)
  });

  // Get {{moduleName}} by ID
  fastify.get('/:id', {
    schema: {
      tags: ['{{ModuleName}}'],
      summary: 'Get {{moduleName}} by ID',
      params: {{ModuleName}}IdParamSchema,
      querystring: Get{{ModuleName}}QuerySchema,
      response: {
        200: {{ModuleName}}ResponseSchema,
        404: ErrorResponseSchema,
        500: ErrorResponseSchema
      }
    },
    handler: controller.findOne.bind(controller)
  });

  // Get all {{moduleName}}s
  fastify.get('/', {
    schema: {
      tags: ['{{ModuleName}}'],
      summary: 'Get all {{moduleName}}s with pagination',
      querystring: List{{ModuleName}}QuerySchema,
      response: {
        200: {{ModuleName}}ListResponseSchema,
        500: ErrorResponseSchema
      }
    },
    handler: controller.findMany.bind(controller)
  });

  // Update {{moduleName}}
  fastify.put('/:id', {
    schema: {
      tags: ['{{ModuleName}}'],
      summary: 'Update {{moduleName}} by ID',
      params: {{ModuleName}}IdParamSchema,
      body: Update{{ModuleName}}Schema,
      response: {
        200: {{ModuleName}}ResponseSchema,
        404: ErrorResponseSchema,
        500: ErrorResponseSchema
      }
    },
    handler: controller.update.bind(controller)
  });

  // Delete {{moduleName}}
  fastify.delete('/:id', {
    schema: {
      tags: ['{{ModuleName}}'],
      summary: 'Delete {{moduleName}} by ID',
      params: {{ModuleName}}IdParamSchema,
      response: {
        200: {
          type: 'object',
          properties: {
            success: { type: 'boolean' },
            message: { type: 'string' }
          }
        },
        404: ErrorResponseSchema,
        500: ErrorResponseSchema
      }
    },
    handler: controller.delete.bind(controller)
  });

  {{#if withEvents}}
  // WebSocket endpoints for real-time updates
  fastify.get('/ws/subscribe', {
    websocket: true,
    schema: {
      tags: ['{{ModuleName}} WebSocket'],
      summary: 'Subscribe to {{moduleName}} real-time updates'
    },
    wsHandler: async (socket, request) => {
      // Join the {{moduleName}} room for real-time updates
      const eventService = fastify.diContainer?.cradle?.eventService;
      if (eventService) {
        await eventService.joinRoom(socket, '{{moduleName}}-updates');
        
        socket.on('message', (message) => {
          try {
            const data = JSON.parse(message.toString());
            // Handle client messages if needed
            fastify.log.info('{{ModuleName}} WebSocket message:', data);
          } catch (error) {
            fastify.log.error('Invalid WebSocket message:', error);
          }
        });

        socket.on('close', () => {
          fastify.log.info('{{ModuleName}} WebSocket connection closed');
        });
      }
    }
  });
  {{/if}}
}