{
  "dashboard": {
    "title": "AegisX API Metrics",
    "tags": ["aegisx", "api", "performance"],
    "timezone": "browser",
    "editable": true,
    "graphTooltip": 1,
    "panels": [
      {
        "id": 1,
        "title": "Total Requests (Rate)",
        "type": "graph",
        "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "rate(http_requests_total{job=\"aegisx-api\"}[5m])",
            "legendFormat": "{{method}} {{route}} - {{status_code}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "format": "reqps", "label": "Requests/sec" },
          { "format": "short" }
        ],
        "xaxis": { "mode": "time" }
      },
      {
        "id": 2,
        "title": "Request Duration (p95)",
        "type": "graph",
        "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{job=\"aegisx-api\"}[5m]))",
            "legendFormat": "p95 - {{method}} {{route}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "format": "s", "label": "Duration" },
          { "format": "short" }
        ],
        "xaxis": { "mode": "time" }
      },
      {
        "id": 3,
        "title": "Active Requests",
        "type": "graph",
        "gridPos": { "x": 0, "y": 8, "w": 8, "h": 8 },
        "targets": [
          {
            "expr": "http_requests_active{job=\"aegisx-api\"}",
            "legendFormat": "Active Requests",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "format": "short", "label": "Count" },
          { "format": "short" }
        ],
        "xaxis": { "mode": "time" }
      },
      {
        "id": 4,
        "title": "Error Rate (4xx + 5xx)",
        "type": "graph",
        "gridPos": { "x": 8, "y": 8, "w": 8, "h": 8 },
        "targets": [
          {
            "expr": "rate(http_requests_total{job=\"aegisx-api\", status_code=~\"4..|5..\"}[5m])",
            "legendFormat": "{{status_code}} - {{route}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "format": "reqps", "label": "Errors/sec" },
          { "format": "short" }
        ],
        "xaxis": { "mode": "time" },
        "alert": {
          "name": "High Error Rate",
          "conditions": [
            {
              "evaluator": { "params": [10], "type": "gt" },
              "query": { "params": ["A", "5m", "now"] },
              "type": "query"
            }
          ]
        }
      },
      {
        "id": 5,
        "title": "Request Size Distribution",
        "type": "graph",
        "gridPos": { "x": 16, "y": 8, "w": 8, "h": 8 },
        "targets": [
          {
            "expr": "rate(http_request_size_bytes_sum{job=\"aegisx-api\"}[5m]) / rate(http_request_size_bytes_count{job=\"aegisx-api\"}[5m])",
            "legendFormat": "Avg Size - {{method}} {{route}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "format": "bytes", "label": "Size" },
          { "format": "short" }
        ],
        "xaxis": { "mode": "time" }
      },
      {
        "id": 6,
        "title": "Top 10 Endpoints by Traffic",
        "type": "table",
        "gridPos": { "x": 0, "y": 16, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "topk(10, sum by (route, method) (rate(http_requests_total{job=\"aegisx-api\"}[5m])))",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": { "Time": true },
              "indexByName": { "route": 0, "method": 1, "Value": 2 },
              "renameByName": {
                "route": "Endpoint",
                "method": "Method",
                "Value": "Requests/sec"
              }
            }
          }
        ]
      },
      {
        "id": 7,
        "title": "Response Time Percentiles",
        "type": "graph",
        "gridPos": { "x": 12, "y": 16, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket{job=\"aegisx-api\"}[5m]))",
            "legendFormat": "p50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.90, rate(http_request_duration_seconds_bucket{job=\"aegisx-api\"}[5m]))",
            "legendFormat": "p90",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{job=\"aegisx-api\"}[5m]))",
            "legendFormat": "p95",
            "refId": "C"
          },
          {
            "expr": "histogram_quantile(0.99, rate(http_request_duration_seconds_bucket{job=\"aegisx-api\"}[5m]))",
            "legendFormat": "p99",
            "refId": "D"
          }
        ],
        "yaxes": [
          { "format": "s", "label": "Duration" },
          { "format": "short" }
        ],
        "xaxis": { "mode": "time" }
      },
      {
        "id": 8,
        "title": "Request Count by Status Code",
        "type": "stat",
        "gridPos": { "x": 0, "y": 24, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{job=\"aegisx-api\", status_code=~\"2..\"}[5m]))",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value",
          "textMode": "auto",
          "orientation": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "color": { "mode": "thresholds" },
            "thresholds": {
              "mode": "absolute",
              "steps": [{ "value": null, "color": "green" }]
            }
          }
        },
        "title": "Success Rate (2xx)"
      },
      {
        "id": 9,
        "title": "Client Errors (4xx)",
        "type": "stat",
        "gridPos": { "x": 6, "y": 24, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{job=\"aegisx-api\", status_code=~\"4..\"}[5m]))",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value",
          "textMode": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "color": { "mode": "thresholds" },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": null, "color": "yellow" },
                { "value": 5, "color": "orange" }
              ]
            }
          }
        }
      },
      {
        "id": 10,
        "title": "Server Errors (5xx)",
        "type": "stat",
        "gridPos": { "x": 12, "y": 24, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{job=\"aegisx-api\", status_code=~\"5..\"}[5m]))",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value",
          "textMode": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "color": { "mode": "thresholds" },
            "thresholds": {
              "mode": "absolute",
              "steps": [{ "value": null, "color": "red" }]
            }
          }
        }
      },
      {
        "id": 11,
        "title": "Total Requests",
        "type": "stat",
        "gridPos": { "x": 18, "y": 24, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{job=\"aegisx-api\"}[5m]))",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value",
          "textMode": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "color": { "mode": "palette-classic" }
          }
        }
      }
    ],
    "refresh": "30s",
    "time": { "from": "now-1h", "to": "now" },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h"]
    },
    "version": 1
  },
  "overwrite": true
}
